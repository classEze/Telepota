
{{#section 'header'}}
<link rel="stylesheet" href="/css/signup.css">
{{/section}}

<main class='swrapper'>
    <h1 style='text-align:center'> Rider Sign Up</h1>
    <form action="/signup/rider" method='POST'>
    <section class='fields_wrapper'>
<div class="sfield">
     <label for="Name"> Name</label>
    <input type="text" required name="name" id="name" class="stext">
</div>

<div class="sfield">
    <label for=""> Address</label>
    <input type="text" required name="address" id="address" class="stext">

</div>
<div class="sfield">
<label for=""> Email</label>
    <input type="text" required name="email" id="email" class="stext">

</div>
<div class="sfield">
<label for="">  Phone e.g +2348100022284</label>
    <input type="text" required name="phone" id="phone" class="stext">
</div>

<div class="sfield">
<label for=""> Password</label>
    <input type="password" required name="password" id="password" class="stext">
</div>
<div class="sfield">
<label for="">Confirm Password</label>
    <input type="password" required name="confirm_password" id="confirm_password" class="stext">
</div>
    </section>

<div class="button_wrapper">
    <button type="submit" class="submit">Submit</button>
</div>

    </form>
</main>

{{#section 'footer'}}
<script src="/js/validate.js"></script>
{{/section}}

